@model IEnumerable<DataLayer.RoleModel>

@{
    ViewBag.Title = "Index";
}

<h2>گروه های کاربری</h2>

<p>
    @Html.ActionLink("گروه جدید", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Role)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Enabled)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Role)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Enabled)
        </td>
        <td>
            @Html.ActionLink("ویرایش", "Edit", new { id=item.RoleID }) |
            @Html.ActionLink("جزپیات", "Details", new { id=item.RoleID }) |
